@model List<GetCategoryQueryResult>
@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" >

<div class = "container">
    <br /><br />
    <div class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
               <td>@item.CategoryID</td>
               <td>@item.Name</td>
               <td><a href="#" class="btn btn-danger"></a>Sil</td>
               <td><a href="#" class="btn btn-dark"></a>Güncelle</td>
            </tr>
        }
    </div>
</div>
